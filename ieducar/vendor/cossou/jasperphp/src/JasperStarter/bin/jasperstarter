## detect home folder
if(test -L "$0") then
  auxlink=`ls -l "$0" | sed 's/^[^>]*-> //g'`
  HOME_FOLDER=`dirname "$auxlink"`/..
else 
  HOME_FOLDER=`dirname "$0"`/..
fi

#SCRIPTPATH="$(dirname $0)"
java -jar "$HOME_FOLDER/lib/jasperstarter.jar" "$@"